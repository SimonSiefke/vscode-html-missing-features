{
  "name": "html-missing-features",
  "private": true,
  "license": "MIT",
  "scripts": {
    "dev": "tsc -b --watch",
    "postinstall": "lerna bootstrap && tsc -b",
    "clean": "rimraf dist",
    "test": "",
    "bundle:client": "webpack --mode production --config ./webpack/html-language-features.client.webpack.config.js",
    "bundle:server": "webpack --mode production --config ./webpack/html-language-features.server.webpack.config.js",
    "package": "npm run clean && npm run bundle:client && npm run bundle:server && node scripts/package.js && cd dist",
    "publish": "npm run package && cd dist && npx semantic-release",
    "e2e": "cd packages/extension && npm run e2e",
    "bundlesize": "bundlesize"
  },
  "devDependencies": {
    "bundlesize": "^0.18.0",
    "fs-extra": "^8.1.0",
    "lerna": "^3.18.4",
    "merge-options": "^2.0.0",
    "rimraf": "^3.0.0",
    "semantic-release": "^15.13.30",
    "semantic-release-vsce": "^2.2.8",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.2",
    "webpack": "^5.0.0-beta.1",
    "webpack-bundle-analyzer": "^3.6.0",
    "webpack-cli": "^3.3.10"
  },
  "renovate": {
    "extends": "bitworkers"
  },
  "bundlesize": [],
  "prettier": {
    "semi": false,
    "trailingComma": "es5",
    "singleQuote": true
  }
}
